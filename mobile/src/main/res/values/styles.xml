<resources>

    <!-- Base application theme. -->
    <style name="MaterialSandboxTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bright_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/dark_green</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarDivider">@null</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SandboxTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bright_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/dark_green</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarDivider">@null</item>

    </style>




     <!-- Action Bar Specific Style -->
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:height">10dp</item>
        <item name="background">@color/orange</item>
        <!-- Background color for tab bar -->
        <item name="backgroundStacked">@color/orange</item>
        <item name="backgroundSplit">@color/orange</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarTabTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Layout for individual tabs -->
    <style name="ActionBarTabStyle" parent="Widget.AppCompat.ActionBar.TabView">
        <!-- Specifiy a state list drawable to control the tabs
        <item name="android:background">@drawable/tab_background</item>
        -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:layout_width">1dip</item>
        <item name="android:minWidth">1dp</item>
    </style>

</resources>
