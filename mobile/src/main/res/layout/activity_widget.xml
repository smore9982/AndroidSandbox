<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:context="more.sandbox.activities.WidgetActivity"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/regularTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:text="Regular TextView"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_height="100dp"
            android:layout_width="wrap_content">
        </android.support.v7.widget.SwitchCompat>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

        <TextView
            android:id="@+id/elevatedTextView"
            android:layout_below="@id/regularTextView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"
            android:background="@drawable/rounded_rect"
            android:text="Text View with Elevation"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:text="Button"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_below="@id/elevatedTextView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="Some Text inside of a card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:gravity="center"
            android:background="#00ff00">
        </android.support.v7.widget.Toolbar>

    </LinearLayout>
</ScrollView>
